modules = ["lua", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run AdvancedSpy"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AdvancedSpy Server"

[[workflows.workflow]]
name = "Run AdvancedSpy"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "lua -i AdvancedSpy.lua"
waitForPort = 5000

[[workflows.workflow]]
name = "AdvancedSpy Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "lua -i AdvancedSpy.lua"]

[[ports]]
localPort = 5000
externalPort = 80
